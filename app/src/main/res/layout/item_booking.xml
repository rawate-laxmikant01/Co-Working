<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slot_card"
    android:layout_width="match_parent"
    android:background="@drawable/rectangle_6"
    android:gravity="center|center_horizontal|center_vertical"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical"
    android:layout_height="@dimen/_100sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_1sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="textStart"
            android:layout_marginLeft="@dimen/_12sdp"
            android:textSize="@dimen/_12sdp"
            android:text="Desk ID"
            android:layout_weight="2"
            android:textColor="#898989" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="textStart"
            android:textSize="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_6sdp"
            android:text=":"
            android:textColor="#898989" />

        <TextView
            android:id="@+id/dateTextView_booking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="textStart"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_1sdp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginLeft="@dimen/_6sdp"
            android:textSize="@dimen/_12sdp"
            android:text="21564"
            android:textColor="#1E1E1E" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_1sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="textStart"
            android:layout_marginLeft="@dimen/_12sdp"
            android:textSize="@dimen/_12sdp"
            android:text="Name"
            android:layout_weight="2"
            android:textColor="#898989" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="textStart"
            android:textSize="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_6sdp"
            android:text=":"
            android:textColor="#898989" />

        <TextView
            android:id="@+id/name_booking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="textStart"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_1sdp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginLeft="@dimen/_6sdp"
            android:textSize="@dimen/_12sdp"
            android:text="Supriya Thete"
            android:textColor="#1E1E1E" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_1sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="textStart"
            android:layout_marginLeft="@dimen/_12sdp"
            android:textSize="@dimen/_12sdp"
            android:text="Booked on "
            android:layout_weight="2"
            android:textColor="#898989" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="textStart"
            android:textSize="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_6sdp"
            android:text=":"
            android:textColor="#898989" />

        <TextView
            android:id="@+id/dat_booking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="textStart"
            android:layout_marginTop="@dimen/_1sdp"
            android:fontFamily="@font/poppins_medium"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_6sdp"
            android:textSize="@dimen/_12sdp"
            android:text="31 may 2022 at 02:00PM"
            android:textColor="#1E1E1E" />
    </LinearLayout>


</LinearLayout>